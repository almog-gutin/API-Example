{
	"info": {
		"_postman_id": "08e74a8d-2f3e-4122-a1b6-05578c971f4e",
		"name": "Book",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "New Book",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"const publicationDate = new Date('November 30, 2021');",
							"pm.environment.set(\"bookPublicationDate\", publicationDate);"
						],
						"type": "text/javascript"
					}
				},
				{
					"listen": "test",
					"script": {
						"exec": [
							"const res = pm.response;",
							"",
							"if (res.code == 201) {",
							"    const book = res.json().data.book;",
							"",
							"    pm.environment.set('bookID', book._id)",
							"}"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"warning": "This is a duplicate header and will be overridden by the Content-Type header generated by Postman.",
						"key": "Content-Type",
						"value": "application/json",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"title\": \"\",\n    \"author\": \"\",\n    \"description\": \"\",\n    \"publisher\": \"\",\n    \"publicationDate\": \"{{bookPublicationDate}}\",\n    \"pages\": 200,\n    \"price\": 4.99\n}"
				},
				"url": {
					"raw": "{{HOST}}:{{PORT}}/books/new",
					"host": [
						"{{HOST}}"
					],
					"port": "{{PORT}}",
					"path": [
						"books",
						"new"
					]
				}
			},
			"response": []
		},
		{
			"name": "Get Books",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{HOST}}:{{PORT}}/books",
					"host": [
						"{{HOST}}"
					],
					"port": "{{PORT}}",
					"path": [
						"books"
					]
				}
			},
			"response": []
		},
		{
			"name": "Get Book",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							""
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{HOST}}:{{PORT}}/books/{{bookID}}",
					"host": [
						"{{HOST}}"
					],
					"port": "{{PORT}}",
					"path": [
						"books",
						"{{bookID}}"
					]
				}
			},
			"response": []
		}
	],
	"auth": {
		"type": "bearer",
